<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.slienceme.tuyun.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="xyz.slienceme.tuyun.pojos.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="role_id" property="roleId"/>
        <result column="email" property="email"/>
        <result column="type" property="type"/>
        <result column="enabled" property="enabled"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="created_time" property="createdTime"/>
        <result column="created_by" property="createdBy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, name, role_id, email, type, enabled, is_deleted, created_time, created_by
    </sql>

    <select id="selectByUserNameAndPassword" resultType="xyz.slienceme.tuyun.pojos.User">
        select id,
               username,
               password,
               name,
               role_id    as                                  roleId,
               email,
               type,
               enabled,
               DATE_FORMAT(created_time, '%Y-%m-%d %H:%i:%s') createdTime,
               created_by as                                  createdBy
        from user
        where is_deleted = 0
          and username = #{username}
          and password = #{password}
    </select>

    <select id="selectByUserName" resultType="xyz.slienceme.tuyun.pojos.User">
        select id,
               username,
               password,
               name,
               role_id    as                                  roleId,
               email,
               type,
               enabled,
               DATE_FORMAT(created_time, '%Y-%m-%d %H:%i:%s') createdTime,
               created_by as                                  createdBy
        from user
        where is_deleted = 0
          and username = #{username}
    </select>

</mapper>
